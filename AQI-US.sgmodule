#!name=AQI-US standard for iOS Weather
#!desc=Force iOS Weather app to use AQI-US standard for indicating the air quaility at China mainland. @Hackl0us
#!system=ios

[Script]
AQI-US = type=http-response, pattern=https://weather-data.apple.com/v1/weather/[\w-_]+/[0-9]+\.[0-9]+/[0-9]+\.[0-9]+\?include=, requires-body=true, script-path= https://raw.githubusercontent.com/hhrrr/Rules-Surge/master/AQI-US.js, script-update-interval=86400

[MITM]
hostname = %APPEND% weather-data.apple.com
